<%= form_with(model: @product) do |form| %>
  <h1>New product</h1>
  <% if @product.errors.any? %>
    <div style="color: red">
      <br>
      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name, required: true %>
  </div>
  <br>
  <div class="field">
    <%= form.label :price %><br>
    <%= form.number_field :price, min: 0, step: 0.01, required: true %>
  </div>
  <br>
  <div class="field">
    <%= form.label :avatar %><br>
    <%= form.file_field :avatar, direct_upload: true %>
  </div>
  <br>
  <div class="field">
    <%= form.label :images %><br>
    <%= form.file_field :images, multiple: true, direct_upload: true %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back to products", products_path %>
</div>
