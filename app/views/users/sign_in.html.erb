<div class = "body-align-middle">
  <%= form_with url: "/users/new_session", method: :post, model: @user do |form| %>
    <h3><div style="text-align: center">Sign in</div></h3>
    <div>
      <%= form.label :email %><br>
      <%= form.text_field :email %>
    </div>

    <br>
    <div>
      <%= form.label :password %><br>
      <%= form.password_field :password, id:"password" %>
    </div>

    <br>

    <br>
    <div>
      <%= form.submit 'Sign in', class: "button" %>
    </div>

    <br>
    <hr class="solid">
  <% end %>

  <%= form_with url: "/users/sign_up", method: :get, model: @user do |form| %>

    <div>
      <%= form.submit 'Sign up', class: "button input" %>
    </div>
    <div class="white">
      <%= form.label :password %><br>
      <%= form.password_field :password, id:"password", class: "white", disabled: true %>
    </div>
  <% end %>
</div>
